<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" path="invoices.db" />
        <exclude domain="database" path="customers.db" />
        <exclude domain="sharedpref" path="flutter.preferences_cache_key.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow app data transfer between devices -->
        <include domain="file" path="." />
        <exclude domain="database" path="invoices.db" />
        <exclude domain="database" path="customers.db" />
    </device-transfer>
</data-extraction-rules>